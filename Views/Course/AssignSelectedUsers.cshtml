@model IEnumerable<LearningPlatform.Models.UserViewIdModel>

@{
    var CourseId = ViewBag.CourseId;
}

<div class="container">
    <h2>Select Users for Course</h2>

    <form method="post" action="@Url.Action("AssignToUser", "Course")">
        <input type="hidden" name="CourseId" value="@CourseId" />
        <table class="table table-bordered">
            <thead class="table-light">
                <tr>
                    <th>Select</th>
                    <th>Username</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><input type="checkbox" name="selectedUsersIds" value="@item.Id" /></td>
                        <td>@item.Username</td>
                    </tr>
                }
            </tbody>
        </table>
        <button type="submit" class="btn btn-primary">Assign</button>
    </form>
</div>
