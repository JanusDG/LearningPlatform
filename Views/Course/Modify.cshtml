@model LearningPlatform.Models.Course

<div class="container">
    <h2>Modify Course</h2>
    <form asp-action="Modify" method="post">
        <div>
            <label asp-for="Value" class="form-label">Value</label>
            <input asp-for="Value" class="form-control" required>
        </div>
        <button type="submit" class="btn btn-primary">Save Changes</button>
    </form>
</div>
