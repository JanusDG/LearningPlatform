@model LearningPlatform.Models.CourseViewModel

<div class="container">
    <h2>Add course</h2>
    <form asp-action="Create" method="post">
        <div>
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" placeholder="Enter name form your course">

            <label asp-for="Description" class="form-label"></label>
            <input asp-for="Description" class="form-control" placeholder="Add some description to your course">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
